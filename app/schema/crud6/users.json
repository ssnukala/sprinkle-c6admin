{
    "model": "users",
    "title": "User Management",
    "singular_title": "User",
    "description": "Manage users",
    "table": "users",
    "primary_key": "id",
    "permissions": {
        "read": "uri_users",
        "create": "create_user",
        "update": "update_user_field",
        "delete": "delete_user"
    },
    "default_sort": {
        "user_name": "asc"
    },
    "relationships": [
        {
            "name": "roles",
            "type": "many_to_many",
            "pivot_table": "role_user",
            "foreign_key": "user_id",
            "related_key": "role_id",
            "title": "ROLE.2"
        }
    ],
    "detail": {
        "model": "activities",
        "foreign_key": "user_id",
        "list_fields": ["occurred_at", "type", "description", "ip_address"],
        "title": "ACTIVITY.2"
    },
    "fields": {
        "id": {
            "type": "integer",
            "label": "ID",
            "auto_increment": true,
            "readonly": true,
            "listable": false
        },
        "user_name": {
            "type": "string",
            "label": "Username",
            "required": true,
            "sortable": true,
            "filterable": true,
            "listable": true,
            "validation": {
                "required": true,
                "unique": true,
                "length": {
                    "min": 1,
                    "max": 50
                }
            }
        },
        "first_name": {
            "type": "string",
            "label": "First Name",
            "required": true,
            "sortable": true,
            "filterable": true,
            "listable": true,
            "validation": {
                "required": true,
                "length": {
                    "min": 1,
                    "max": 20
                }
            }
        },
        "last_name": {
            "type": "string",
            "label": "Last Name",
            "required": true,
            "sortable": true,
            "filterable": true,
            "listable": true,
            "validation": {
                "required": true,
                "length": {
                    "min": 1,
                    "max": 30
                }
            }
        },
        "email": {
            "type": "string",
            "label": "Email",
            "required": true,
            "sortable": true,
            "filterable": true,
            "listable": true,
            "validation": {
                "required": true,
                "email": true,
                "unique": true,
                "length": {
                    "max": 254
                }
            }
        },
        "locale": {
            "type": "string",
            "label": "Locale",
            "required": false,
            "listable": false,
            "default": "en_US",
            "validation": {
                "length": {
                    "max": 10
                }
            }
        },
        "group_id": {
            "type": "integer",
            "label": "Group",
            "required": false,
            "listable": false
        },
        "flag_verified": {
            "type": "boolean",
            "label": "Verified",
            "default": true,
            "sortable": true,
            "filterable": true,
            "listable": true
        },
        "flag_enabled": {
            "type": "boolean",
            "label": "Enabled",
            "default": true,
            "sortable": true,
            "filterable": true,
            "listable": true
        },
        "password": {
            "type": "string",
            "label": "Password",
            "required": false,
            "listable": false,
            "readonly": true
        },
        "deleted_at": {
            "type": "datetime",
            "label": "Deleted At",
            "readonly": true,
            "listable": false,
            "date_format": "Y-m-d H:i:s"
        },
        "created_at": {
            "type": "datetime",
            "label": "Created At",
            "readonly": true,
            "listable": false,
            "date_format": "Y-m-d H:i:s"
        },
        "updated_at": {
            "type": "datetime",
            "label": "Updated At",
            "readonly": true,
            "listable": false,
            "date_format": "Y-m-d H:i:s"
        }
    }
}
