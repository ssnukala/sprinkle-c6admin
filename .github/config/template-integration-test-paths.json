{
  "description": "TEMPLATE: Integration test paths configuration for your sprinkle",
  "paths": {
    "authenticated": {
      "api": {
        "yourmodel_list": {
          "method": "GET",
          "path": "/api/yoursprinkle/yourmodel",
          "description": "Get list of your model via API",
          "expected_status": 200,
          "validation": {
            "type": "json",
            "contains": ["rows"]
          }
        },
        "yourmodel_single": {
          "method": "GET",
          "path": "/api/yoursprinkle/yourmodel/1",
          "description": "Get single item by ID via API",
          "expected_status": 200,
          "validation": {
            "type": "json",
            "contains": ["id", "name"]
          }
        },
        "yourmodel_create": {
          "method": "POST",
          "path": "/api/yoursprinkle/yourmodel",
          "description": "Create new item via API",
          "expected_status": 200,
          "skip": true,
          "skip_reason": "Requires request body payload"
        },
        "yourmodel_update": {
          "method": "PUT",
          "path": "/api/yoursprinkle/yourmodel/1",
          "description": "Update item via API",
          "expected_status": 200,
          "skip": true,
          "skip_reason": "Requires request body payload"
        },
        "yourmodel_delete": {
          "method": "DELETE",
          "path": "/api/yoursprinkle/yourmodel/1",
          "description": "Delete item via API",
          "expected_status": 200,
          "skip": true,
          "skip_reason": "Would delete test data"
        }
      },
      "frontend": {
        "yourmodel_list": {
          "path": "/yoursprinkle/yourmodel",
          "description": "Your model list page",
          "screenshot": true,
          "screenshot_name": "yourmodel_list"
        },
        "yourmodel_detail": {
          "path": "/yoursprinkle/yourmodel/1",
          "description": "Single item detail page",
          "screenshot": true,
          "screenshot_name": "yourmodel_detail"
        },
        "dashboard": {
          "path": "/yoursprinkle/dashboard",
          "description": "Your dashboard page",
          "screenshot": true,
          "screenshot_name": "dashboard"
        }
      }
    },
    "unauthenticated": {
      "api": {
        "yourmodel_list": {
          "method": "GET",
          "path": "/api/yoursprinkle/yourmodel",
          "description": "Attempt to access list without authentication",
          "expected_status": 401,
          "validation": {
            "type": "status_only"
          }
        },
        "yourmodel_single": {
          "method": "GET",
          "path": "/api/yoursprinkle/yourmodel/1",
          "description": "Attempt to access single item without authentication",
          "expected_status": 401,
          "validation": {
            "type": "status_only"
          }
        }
      },
      "frontend": {
        "yourmodel_list": {
          "path": "/yoursprinkle/yourmodel",
          "description": "Attempt to access list page without authentication (should redirect to login)",
          "expected_status": 200,
          "validation": {
            "type": "redirect_to_login",
            "contains": ["/account/sign-in", "login"]
          }
        },
        "dashboard": {
          "path": "/yoursprinkle/dashboard",
          "description": "Attempt to access dashboard without authentication (should redirect to login)",
          "expected_status": 200,
          "validation": {
            "type": "redirect_to_login",
            "contains": ["/account/sign-in", "login"]
          }
        }
      }
    }
  },
  "config": {
    "base_url": "http://localhost:8080",
    "auth": {
      "username": "admin",
